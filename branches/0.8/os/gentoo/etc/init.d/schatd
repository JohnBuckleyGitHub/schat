depend() {
	use net
}

start() {
	ebegin "Starting IMPOMEZIA Simple Chat Daemon"
	start-stop-daemon --start --user ${SCHATD_USER} --exec /usr/sbin/schatd 
	eend $?
}

stop() {
	ebegin "Stopping IMPOMEZIA Simple Chat Daemon"
	start-stop-daemon --stop --user ${SCHATD_USER} --pidfile "/var/run/schatd/schatd.pid" --exec /usr/sbin/schatd -- -terminate
	eend $?
}
