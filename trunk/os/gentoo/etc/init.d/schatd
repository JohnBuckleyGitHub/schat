opts="reload"

depend() {
	use net
}

start() {
	ebegin "Starting IMPOMEZIA Simple Chat Daemon"
	start-stop-daemon --start --exec ${SCHAT_PATH}/schatd -- -start
	eend $?
}

stop() {
	ebegin "Stopping IMPOMEZIA Simple Chat Daemon"
	start-stop-daemon --stop --exec ${SCHAT_PATH}/schatd -- -terminate
	eend $?
}

reload() {
	ebegin "Reload IMPOMEZIA Simple Chat Daemon"
	${SCHAT_PATH}/schatd -- -c 0
	eend $?
}

